[Unit]
Description=Greek Tutor Flask (Gunicorn)
After=network.target
Wants=greek-tutor-fastapi.service

[Service]
Type=simple
WorkingDirectory=/home/zacharyclement/greek_tutor
EnvironmentFile=/etc/default/greek-tutor
ExecStart=/bin/bash -c '/home/zacharyclement/greek_tutor/.venv/bin/gunicorn -w $${FLASK_WORKERS:-2} -b $${FLASK_BIND:-127.0.0.1:5000} flask_app.app:app'
Restart=on-failure
RestartSec=3
User=zacharyclement

[Install]
WantedBy=multi-user.target

