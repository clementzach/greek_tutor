# Copy to /etc/default/greek-tutor and edit values.

# Absolute path to project directory
PROJECT_DIR=/opt/greek_tutor

# Absolute path to virtual environment (Python 3.13)
VENV_DIR=/opt/greek_tutor/.venv

# Flask bind (behind reverse proxy)
FLASK_BIND=127.0.0.1:5000
FLASK_WORKERS=2

# FastAPI bind
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=2

# App configuration
OPENAI_API_KEY=replace_with_real_key
FLASK_SECRET_KEY=replace_with_random_secret
FASTAPI_URL=http://127.0.0.1:8000
